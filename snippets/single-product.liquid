<div class="single-product">
  <div class="relative">
    <a href="{{ product.url }}">
      <img
        class="rounded-2xl object-cover w-full h-[192px] mb-4 border border-black/10"
        src="{{ product.featured_image | image_url }}"
        alt="{{ product.title }}"
        width=""
        height=""
    ></a>
    <button
      data-product-handle="{{ product.handle- }}"
      class="quick-view-btn absolute left-0 bottom-0 w-full text-center py-3 cursor-pointer"
    >
      Quick View
    </button>
  </div>

  <h3 class="arrivalsTitle text-[20px]">
    <a href="{{ product.url }}">{{ product.title }}</a>
  </h3>
  <div class="flex my-2 items-center">
    {% for i in (1..4) %}
      <svg
        width="17.584923"
        height="16.724243"
        viewBox="0 0 17.5849 16.7242"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
      >
        <desc> Created with Pixso.</desc>
        <defs/>
        <path id="Star 1" d="M8.79 0L6.17 5.63L0 6.38L4.55 10.62L3.35 16.72L8.79 13.7L14.22 16.72L13.03 10.62L17.58 6.38L11.41 5.63L8.79 0Z" fill="#FFC633" fill-opacity="1.000000" fill-rule="evenodd"/>
      </svg>
    {% endfor %}
    <div class="pl-3">5.0/5</div>
  </div>
  <div class="text-2xl font-bold">{{ product.price | money }}</div>
</div>
